<!DOCTYPE html>
<html>
  <head>
    <title>FunnyMovies</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand ms-5" href="<%= root_path %>">Funny Movies</a>
        <% if current_user %>
          <div>
            <span class="me-5">
              <%= "Welcome #{current_user.user_name}" %>
            </span>
            <%= link_to "Share a movie", new_shares_path, class: "btn btn-outline-success me-3" %>
            <%= link_to "Logout", logout_sessions_path, class: "btn btn-outline-success me-3" %>
          </div>
        <% else %>
          <%= render "sessions/form_login_register" %>
        <% end %>
      </div>
    </nav>

    <%= render "shared/flash_message" %>
    <%= yield %>
  </body>
</html>
